Method 1:Maximum Index


class Solution {

    int maxIndexDiff(int arr[], int n) {
        // code here
        int ans=0;
        for(int i=0;i<n;i++){
            for(int j=n-1;j>i;j--){
                if(arr[i]<=arr[j]){
                    ans=Math.max(ans,j-i);
                    break;
                }
            }
        }
        return ans;
    }
}
